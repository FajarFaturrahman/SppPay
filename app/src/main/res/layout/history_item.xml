<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_110sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_14sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_8sdp">

        <TextView
            android:id="@+id/nama_siswa"
            android:layout_width="@dimen/_135sdp"
            android:layout_height="wrap_content"
            android:text="Fajar Faturrahman bin Munir Wardana"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/roboto_medium"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"/>
        
        <TextView
            android:id="@+id/mata_uang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp "
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@android:color/black"
            android:layout_below="@id/nama_siswa"
            android:layout_marginTop="@dimen/_5sdp" />

        <TextView
            android:id="@+id/jumlah_bayar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300.000"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@android:color/black"
            android:layout_below="@id/nama_siswa"
            android:layout_toRightOf="@id/mata_uang"
            android:layout_marginTop="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/tanggal_bayar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04-03-2020"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/roboto_regular"
            android:layout_below="@id/mata_uang"
            android:layout_marginTop="@dimen/_13sdp"/>

        <TextView
            android:id="@+id/nisn"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:text="32012913812"
            android:gravity="end"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@android:color/black"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/keterangan_petugas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Petugas:"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@android:color/black"
            android:layout_below="@id/nisn"
            android:layout_toLeftOf="@id/nama_petugas"
            android:layout_marginTop="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/nama_petugas"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:text="Ujang Hayu"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@android:color/black"
            android:gravity="center_horizontal"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/nisn"
            android:minLines="1"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/_5sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap For Detail"
            android:textSize="@dimen/_7sdp"
            android:textColor="@android:color/black"
            android:layout_alignParentBottom="true"
            android:gravity="center"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>