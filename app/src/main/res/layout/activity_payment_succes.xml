<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.PaymentSuccess">

    <androidx.cardview.widget.CardView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_350sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_30sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_190sdp"
                android:background="@color/colorPrimary">

                <ImageView
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:src="@drawable/ic_tick"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_85sdp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_158sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pembayaran Berhasil"
                    android:gravity="center"
                    android:textSize="@dimen/_20sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="@dimen/_20sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pembayaran telah berhasil dilakukan
Tekan Beranda untuk kembali."
                    android:gravity="center"
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"/>

            </LinearLayout>
        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_to_beranda"
        android:text="Beranda"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        style="@style/ButtonLoginDanSimpan"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>